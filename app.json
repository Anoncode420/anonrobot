{
  "name": "PearlBot",
  "description": "A Telegram modular bot with PTB v20 and MongoDB",
  "repository": "https://github.com/Anoncode420/pearl",
  "env": {
    "TOKEN": {
      "description": "Your Telegram Bot API token",
      "required": true
    },
    "MONGO_URI": {
      "description": "Your MongoDB URI (e.g., from MongoDB Atlas)",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}